<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGround"
    tools:context=".MainActivity">


     <ImageView
         android:id="@+id/image"
         android:layout_width="match_parent"
         android:layout_height="174sp"
         android:layout_alignParentTop="true"
         android:layout_marginTop="97dp"
         android:layout_marginBottom="6sp"
         android:paddingLeft="30sp"
         android:paddingRight="15sp"
         android:src="@drawable/mtx" />

     <ImageView
         android:layout_width="143dp"
         android:layout_height="99dp"
         android:layout_alignParentTop="true"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="10sp"
         android:src="@drawable/ieee" />

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="506dp"
         android:layout_below="@id/image"
         android:gravity="center_horizontal"
         android:orientation="vertical"
         android:padding="14sp">

          <TextView
              android:id="@+id/welc"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentTop="true"
              android:layout_marginTop="5dp"
              android:gravity="center"
              android:text="Welcome to MUTEX"
              android:textColor="#0a0a0a"
              android:textSize="25sp"
              android:textStyle="bold" />

          <TextView
              android:id="@+id/about"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentEnd="true"
              android:layout_alignParentBottom="true"
              android:layout_gravity="center_horizontal"
              android:layout_marginTop="5dp"
              android:text="MUTEX is the biggest technological annual event hosted by IEEE Zagazig SB. The event mainly focuses on introducing the latest technologies in computer science fields to the audience and setting a clear path for them to follow."
              android:textAlignment="center"
              android:textColor="#0a0a0a"
              android:textSize="12sp"
              android:textStyle="italic" />

          <RelativeLayout
              android:layout_width="wrap_content"
              android:layout_height="235dp"
              android:layout_below="@id/about"
              android:layout_marginLeft="40sp"
              android:layout_marginTop="10sp"
              android:layout_marginRight="40sp"
              android:paddingTop="20sp"
              android:paddingBottom="8sp">

               <ImageButton
                   android:id="@+id/agenda_button"
                   android:layout_width="64dp"
                   android:layout_height="59dp"
                   android:layout_alignParentRight="true"
                   android:layout_alignParentBottom="true"
                   android:layout_marginRight="0dp"
                   android:layout_marginBottom="26dp"
                   android:adjustViewBounds="true"
                   android:background="@color/backGround"
                   android:paddingTop="15sp"
                   android:scaleType="fitCenter"
                   android:src="@drawable/agenddd" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_alignParentBottom="true"
                   android:layout_marginRight="-1dp"
                   android:layout_marginBottom="9dp"
                   android:paddingRight="15sp"
                   android:text="Agenda"
                   android:textColor="#0a0a0a"
                   android:textSize="9sp"
                   android:textStyle="bold" />

               <ImageButton
                   android:id="@+id/feedbackBtn"
                   android:layout_width="68dp"
                   android:layout_height="52dp"
                   android:layout_alignParentLeft="true"
                   android:layout_alignParentBottom="true"
                   android:layout_marginBottom="23dp"
                   android:adjustViewBounds="true"
                   android:background="@color/backGround"
                   android:scaleType="fitCenter"
                   android:src="@drawable/fd" />

               <TextView
                   android:id="@+id/feedbackTv"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentLeft="true"
                   android:layout_alignParentBottom="true"
                   android:layout_marginLeft="8dp"
                   android:layout_marginBottom="12dp"
                   android:paddingLeft="4sp"
                   android:text="Feedback"
                   android:textColor="#0a0a0a"
                   android:textSize="9sp"
                   android:textStyle="bold" />

               <ImageButton
                   android:layout_width="56dp"
                   android:layout_height="56dp"
                   android:layout_alignParentTop="true"
                   android:layout_alignParentRight="true"
                   android:layout_marginBottom="20sp"
                   android:adjustViewBounds="true"
                   android:background="@color/backGround"
                   android:scaleType="fitCenter"
                   android:src="@drawable/lo" />

               <ImageButton
                   android:id="@+id/sponsorsButton"
                   android:layout_width="64dp"
                   android:layout_height="65dp"
                   android:layout_alignParentLeft="true"
                   android:layout_alignParentTop="true"
                   android:adjustViewBounds="true"
                   android:background="@color/backGround"
                   android:scaleType="fitCenter"
                   android:src="@drawable/sp" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_above="@+id/feedbackBtn"
                   android:layout_alignParentStart="true"
                   android:layout_alignParentLeft="true"
                   android:layout_marginStart="11dp"
                   android:layout_marginLeft="11dp"
                   android:layout_marginTop="47dp"
                   android:layout_marginBottom="54dp"
                   android:paddingLeft="4sp"
                   android:text="Partners"
                   android:textColor="#0a0a0a"
                   android:textSize="9sp"
                   android:textStyle="bold" />

               <ImageButton
                   android:id="@+id/ff"
                   android:layout_width="50sp"
                   android:layout_height="50sp"
                   android:layout_centerInParent="true"
                   android:layout_marginBottom="5sp"
                   android:adjustViewBounds="true"
                   android:background="@color/backGround"
                   android:scaleType="fitCenter"
                   android:src="@drawable/user" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_below="@+id/ff"
                   android:layout_centerInParent="true"
                   android:text="Speakers"
                   android:textColor="#0a0a0a"
                   android:textSize="9sp"
                   android:textStyle="bold" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_above="@+id/agenda_button"
                   android:layout_alignParentEnd="true"
                   android:layout_marginStart="83dp"
                   android:layout_marginTop="50sp"
                   android:layout_marginEnd="1dp"
                   android:layout_marginRight="5dp"
                   android:layout_marginBottom="46dp"
                   android:paddingRight="8sp"
                   android:text="Location"
                   android:textColor="#0a0a0a"
                   android:textSize="9sp"
                   android:textStyle="bold" />
          </RelativeLayout>

     </LinearLayout>
</RelativeLayout>