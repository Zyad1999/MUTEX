<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/speaker_image"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_margin="16dp"
        android:background="@color/backGround"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="5dp"
        app:civ_shadow="true"
        app:civ_shadow_color="@color/colorPrimary"
        app:civ_shadow_radius="5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ibm" />


    <TextView
        android:id="@+id/speaker_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="8dp"
        android:fontFamily="serif-monospace"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/speaker_image"
        app:layout_constraintTop_toTopOf="@+id/speaker_image"
        tools:text="Speaker's Name" />

    <TextView
        android:id="@+id/speaker_desrcription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/speaker_name"
        app:layout_constraintTop_toBottomOf="@+id/speaker_name"
        tools:text="Description" />

    <ImageView
        android:id="@+id/social_media_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/speaker_desrcription"
        app:layout_constraintTop_toBottomOf="@+id/speaker_desrcription"
        tools:srcCompat="@drawable/ic_facebook" />

    <ImageView
        android:id="@+id/social_media_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/social_media_1"
        app:layout_constraintTop_toBottomOf="@+id/speaker_desrcription"
        tools:srcCompat="@drawable/ic_twitter" />

    <ImageView
        android:id="@+id/social_media_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/social_media_2"
        app:layout_constraintTop_toBottomOf="@+id/speaker_desrcription"
        tools:srcCompat="@drawable/ic_linkedin" />

    <ImageView
        android:id="@+id/social_media_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/social_media_3"
        app:layout_constraintTop_toBottomOf="@+id/speaker_desrcription"
        tools:srcCompat="@drawable/ic_github" />


</androidx.constraintlayout.widget.ConstraintLayout>